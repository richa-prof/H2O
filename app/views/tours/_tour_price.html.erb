<% if @tour_price %>
  <h6>
    <%= t 'prices_good_for' %>
    <strong>
      <%= @tour_price.tour_price_type.tour_price_type_locales.where('locale = ?', params[:locale]).first.nome %>
    </strong>
  </h6>
  <div class="prices-box">
    <div class="col-12 col-lg-3">
      <i class="fas fa-user"></i> <%= t 'adults' %>
      <% unless @tour_price.idade_crianca2.blank? %>
        <small>(<%= t 'older_than' %> <%= @tour_price.idade_crianca2 %> <%= t 'yrs_old' %>)</small>
      <% end %>
      <span><%= number_to_currency @tour_price.preco_adulto %></span>
    </div>
    <% if @tour_price.preco_crianca2 %>
      <div class="col-12 col-lg-3">
        <i class="fas fa-child"></i> <%= t 'children' %>
        <small>(<%= t 'up_to' %> <%= @tour_price.idade_crianca2 %> <%= t 'yrs_old' %>)</small>
        <span><%= number_to_currency @tour_price.preco_crianca2 %></span>
      </div>
    <% end %>
    <% if @tour_price.preco_crianca %>
      <div class="col-12 col-lg-3">
        <i class="fas fa-child"></i> <%= t 'children' %>
        <small>(<%= t 'up_to' %> <%= @tour_price.idade_crianca %> <%= t 'yrs_old' %>)</small>
        <span><%= number_to_currency @tour_price.preco_crianca %></span>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="prices-box">
    <%= t 'no_price_to_show' %>
  </div>
<% end %>
