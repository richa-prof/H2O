<section class="product-thumbnails">
  <div id="slider" class="flexslider">
    <ul class="slides">
      <% unless @hotel.video.blank? %>
        <li>
          <div class="video-slider">
            <iframe src="https://www.youtube.com/embed/<%= @hotel.video %>?rel=0" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
          </div>
        </li>
      <% end %>
      <% @hotel.images.any? do %>
        <% @hotel.images.each do |this_image| %>
          <li><%= image_tag this_image, lazy: true %></li>
        <% end %>
      <% end %>
      <% unless @hotel.imagem_1.blank? %>
         <li><%= image_tag 'https://admin.h2oecoturismo.com.br/'+@hotel.imagem_1, lazy: true %></li>
      <% end %>
      <% unless @hotel.imagem_2.blank? %>
         <li><%= image_tag 'https://admin.h2oecoturismo.com.br/'+@hotel.imagem_2, lazy: true %></li>
      <% end %>
      <% unless @hotel.imagem_3.blank? %>
         <li><%= image_tag 'https://admin.h2oecoturismo.com.br/'+@hotel.imagem_3, lazy: true %></li>
      <% end %>
      <% unless @hotel.imagem_4.blank? %>
         <li><%= image_tag 'https://admin.h2oecoturismo.com.br/'+@hotel.imagem_4, lazy: true %></li>
      <% end %>
    </ul>
  </div>
  <div id="carousel" class="flexslider">
    <ul class="slides">
      <% unless @hotel.video.blank? %>
        <li><img src="https://img.youtube.com/vi/<%= @hotel.video %>/0.jpg"></li>
      <% end %>
      <% @hotel.images.any? do %>
        <% @hotel.images.each do |this_image| %>
          <li><%= image_tag this_image.variant(resize: '600x200^'), lazy: true %></li>
        <% end %>
      <% end %>
      <% unless @hotel.imagem_1.blank? %>
         <li><%= image_tag 'https://admin.h2oecoturismo.com.br/'+@hotel.imagem_1, lazy: true %></li>
      <% end %>
      <% unless @hotel.imagem_2.blank? %>
         <li><%= image_tag 'https://admin.h2oecoturismo.com.br/'+@hotel.imagem_2, lazy: true %></li>
      <% end %>
      <% unless @hotel.imagem_3.blank? %>
         <li><%= image_tag 'https://admin.h2oecoturismo.com.br/'+@hotel.imagem_3, lazy: true %></li>
      <% end %>
      <% unless @hotel.imagem_4.blank? %>
         <li><%= image_tag 'https://admin.h2oecoturismo.com.br/'+@hotel.imagem_4, lazy: true %></li>
      <% end %>
    </ul>
  </div>
</section>
