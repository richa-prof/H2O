<% @itinerary.itinerary_hotels.each do |h| %>
  <tr bgcolor="#f2f2f2">
    <td colspan="2">
      <table border="0" cellpadding="0" cellspacing="0" width="100%" style="border-collapse:collapse;">
        <tr>
          <td width="80%" valign="top" align="left" style="padding: 1% 1% 1% 1%;">
            <table width="100%" style="color:grey;font-family:Arial;">
              <tr>
                <td valign="top" width="15%" align="center" style="padding: 1% 1% 1% 1%;">
                  <div style="font-size:125%;">
                    <%= t 'start_date' %>
                    <br/>
                    <%= l h.check_in %>
                  </div>
                </td>
                <td valign="top" width="15%" align="center" style="padding: 1% 1% 1% 1%;">
                  <div style="font-size:125%;">
                    <%= t 'end_date' %>
                    <br/>
                    <%= l h.check_out %>
                  </div>
                </td>
                <td valign="top" width="45%" align="left" style="padding: 1% 1% 1% 1%;">
                  <div style="font-family:Arial;color:grey;">
                    <b style="color:black;font-size:125%;">
                      <%= h.hotel.hotel_locales.where(locale: @this_locale).first.nome %>
                      -
                      <%= h.categoria %>
                    </b>
                  </div>
                  <%= h.pax_description %>
                </td>
                <td valign="top" width="20%" align="right" style="padding: 1% 1% 1% 1%;">
                  <div style="font-size:125%;">
                    <%= (h.check_out - h.check_in).to_i %> <%= t 'nights' %> <%= t 'for' %>
                    <br/>
                    <%= number_to_currency h.total %>
                  </div>
                </td>
                <td width="5%">
                </td>
              </tr>
            </table>
          </td>
          <td width="20%" valign="top">
            <%= image_tag 'https://admin.h2oecoturismo.com.br/'+h.hotel.ploomes_img.to_s, width: '100%' %>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td colspan="2" valign="top">
      <div style="color:black;font-size:90%;font-family:Arial;">
        <% if @this_locale == 'en-US' %>
          <%= link_to (t 'cart_mailer.see_page'), hotel_en_url(h.hotel) %>
        <% else %>
          <%= h.hotel.ploomes_descricao %>
          <%= link_to (t 'cart_mailer.see_page'), hotel_pt_br_url(h.hotel) %>
        <% end %>
        <br/>
        <br/>
      </div>
    </td>
  </tr>
<% end %>
