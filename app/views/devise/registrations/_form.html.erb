<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="login-form">
    <%= devise_error_messages! %>
     <div class="form-group">
       <label><%= t 'activerecord.attributes.user.nome' %></label>
       <%= f.text_field :nome, autofocus: true, class: "form-control", placeholder: "John" %>
     </div>
     <div class="form-group">
       <label><%= t 'activerecord.attributes.user.email' %></label>
       <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "abc@gmail.com" %>
     </div>
     <div class="form-group">
       <label><%= t 'activerecord.attributes.user.password' %></label>
       <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "******" %>
     </div>
     <div class="form-group">
       <label><%= t 'activerecord.attributes.user.password_confirm' %></label>
       <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "******" %>
     </div>
     <button type="submit" class="btn btn-success btn-md btn-register btn-big"><%= t 'register' %></button>
  </div>
<% end %>
