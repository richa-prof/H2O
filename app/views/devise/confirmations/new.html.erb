<section class="login">
   <div class="container">
      <div class="row">
         <div class="col-12 col-lg-6 offset-lg-3 text-center">
            <h2 class="text-center" style="font-size: 30px"><%= t 'request_confirmation' %></h2>
            <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
              <div class="login-form">
                <%= devise_error_messages! %>
                 <div class="form-group text-left">
                   <label><%= t 'activerecord.attributes.user.email' %></label>
                   <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "abc@gmail.com", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
                 </div>
                 <button type="submit" class="btn btn-success btn-md">
                   <%= t 'send_confirmation_instructions' %>
                 </button>
                 <a href="<%= new_session_path(resource_name) %>" class="back mt-4"><%= t 'back' %></a>
                 <a href="<%= new_password_path(resource_name) %>" class="confirm mt-2"><%= t 'forgot' %></a>
              </div>
            <% end %>
         </div>
      </div>
   </div>
</section>
